{
  "name": "main",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/main/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/main"
      },
      "configurations": {
        "development": {
          "sourcemap": true,
          "minify": false,
          "mode": "development"
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/main/src/environments/environment.ts",
              "with": "apps/main/src/environments/environment.prod.ts"
            }
          ],
          "sourcemap": false,
          "minify": true,
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "main:build",
        "port": 4200,
        "hmr": true,
        "host": true,
        "proxyConfig": "apps/admin/proxy.config.json"
      },
      "configurations": {
        "development": {
          "buildTarget": "main:build:development"
        },
        "production": {
          "buildTarget": "main:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/main/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/main/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "config": {
          "configFolder": "apps/main/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/react",
        "outputPath": "dist/storybook/main",
        "config": {
          "configFolder": "apps/main/.storybook"
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "deploy:chromatic": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx chromatic --project-token=cd4322138b5b --storybook-build-dir "
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c apps/main/.storybook --url=http://localhost:4400"
      }
    }
  },
  "tags": []
}
